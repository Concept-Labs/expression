{
    "name": "concept-labs/expression",
    "description": "(C)oncept-Labs Expression",
    "keywords": ["php","expression", "composition"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Viktor Halytskyi",
            "email": "concept.galitsky@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "Concept\\Expression\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Concept\\Expression\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:phpunit": "phpunit",
        "test:coverage": "pest --coverage"
    },
    "extra": {
        "concept": {
            "include": "concept.json"
        }
    }

}